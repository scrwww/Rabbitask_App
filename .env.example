# Rabbitask App - Environment Configuration
# Copy this file to .env and adjust values for your environment

# === API Configuration ===
# Base URL for API endpoints
# Format: https://hostname:port/api
# Default (dev): https://localhost:7263/api
ANGULAR_API_URL=https://localhost:7263/api

# Alternative environment variable name (VITE convention)
# VITE_API_URL=https://localhost:7263/api

# === Build Configuration ===
# Production build flag
ENVIRONMENT=development
# Options: development, production

# === JWT Configuration ===
# JWT token storage key in localStorage
JWT_TOKEN_KEY=jwt_token

# === Development Server ===
# Enable hot reload for development
HMR_HOST=localhost
HMR_PORT=4200

# === CORS Configuration ===
# Frontend origin for CORS (set on backend)
# FRONTEND_ORIGIN=http://localhost:8100

# === Docker Configuration (if using containers) ===
# API Container hostname (internal Docker network)
# RABBITASK_API_HOST=api
# RABBITASK_API_PORT=7263

# Database connection (backend only, referenced for context)
# RABBITASK_DB_HOST=db
# RABBITASK_DB_PORT=3306
# RABBITASK_DB_NAME=rabbitask_db
# RABBITASK_DB_USER=root
# RABBITASK_DB_PASSWORD=password

# JWT Secrets (backend only)
# JWT_KEY=your-secret-key-here
# JWT_ISSUER=https://localhost:7263
# JWT_AUDIENCE=https://localhost:8100
